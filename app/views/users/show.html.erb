<p id="notice"><%= notice %></p>

<h1><%= @user.name%></h1>
<p>
  <strong>Login:</strong>
  <%= @user.login %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @user.admin %>
</p>

<p>
  <strong>Organization:</strong>
  <%= @user.organization.name %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<% if current_user.admin > 0 %>
  <%= link_to 'Organization', organization_url(current_user.organization)%>
  <% if current_user.admin > 1 %>
    <%= link_to 'Users', users_path %>
  <%end%>
<%else%>
  <%= link_to 'Accounts', accounts_user_path(current_user) %>
<%end%>


