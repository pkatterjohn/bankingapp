<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">
	  <% if logged_in? %>
		  <%= link_to "PKAT's Banking App", home_user_path(current_user), id: "logo" %>
    <%else%>
		  <%= link_to "PKAT's Banking App", root_path, id: "logo" %>
    <%end%>
		<nav>
      <ul class="nav navbar-nav navbar-right">
				<% if logged_in? %>
          <% if current_user.admin.equal?(2)%>
            <li><%=link_to "Organizations", organizations_path%></li>
            <li><%=link_to "Users", users_path%></li>
            <li><%=link_to "Accounts", accounts_path%></li>
            <li><%=link_to "Transactions", transactions_path%></li>
          <%end%>
          <% if current_user.admin.equal?(1)%>
            <li><%=link_to "Organization", current_user.organization%></li>
          <%end%>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              User Menu <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Home", home_user_path(current_user)%></li>
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Accounts", accounts_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
				<% else %>
          <li><%= link_to "Home", root_path %></li>
					<li><%= link_to "Log in", login_path %></li>
				<% end %>
				</ul>
		</nav>
	</div>
</header>
